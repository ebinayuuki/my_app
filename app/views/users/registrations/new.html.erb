<h2>Sign up</h2>
<div class = "blank"></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>

  <div class="field">
    <p>Gender</p>
    <label><%= f.radio_button :gender, "man" %>男</label>
    <label><%= f.radio_button :gender, "woman" %>女</label>
  </div>

  <div class="field">
    <%= f.label :postal %><br />
    <%= f.text_field :postal, autofocus: true, autocomplete: "postal" %>
  </div>

  <div class="field">
    <%= f.label :ken_id %><br />
    <%= f.text_field :ken_id, autofocus: true, autocomplete: "ken_id" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :info %><br />
    <%= f.text_field :info, autofocus: true, autocomplete: "info" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
